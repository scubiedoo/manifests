#
# Kernel config
menu "Kernel config"

	config KERNEL_MENUCONFIG
		bool "Menuconfig"
		default n
		help
			Run menuconfig before compilation
	
	config KERNEL_BOOT_MODULES
		string "boot modules"
		default "lcd hdmi disp mali fb ump mali_drm"
		help
			these modules are loaded in this order.
			If you don't know what this is about, leave it as it is.
			Otherwise your cubieboard might produce dead locks.
	
	comment "Kernel GIT repository"
	
	config KERNEL_GIT
		string "repository"
		default "https://github.com/patrickhwood/linux-sunxi"
		help
			GIT repository
	
	config KERNEL_GIT_BRANCH
		string "branch"
		default "pat-3.4.75"
		help
			GIT branch
		
	config KERNEL_DEFCONFIG
		string "defconfig"
		default "sun7i_defconfig"
		help
			Used as default when no .config file exists
	
	comment "TODO make it selectable"
	
endmenu

